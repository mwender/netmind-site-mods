<div class="related-posts">
  {{#each items}}
    <div class="list-item {{tolowercase terms.resource_type}}">
      <a href="{{permalink}}">
        <div class="list-content post {{tolowercase terms.resource_type}}">
          <div class="overlay" style="background-image: url({{thumbnail}})">
            <div class="ribbon {{tolowercase terms.resource_type}}"></div>
            <div class="blue-overlay"></div>
            <div class="category-overlay">{{terms.resource_type}}</div>
          </div>
          <p class="meta">{{meta}}</p>
          <h3 class="title">{{title}}</h3>
        </div>
      </a>
    </div>
  {{/each}}
</div>